<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" style="-fx-background-color: lightgrey;" stylesheets="@Style.css"
            xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="View.RegisterView">
    <AnchorPane prefHeight="606.0" prefWidth="292.0" style="-fx-background-color: lightgrey;">
        <ImageView fx:id="brandingImageView" fitHeight="256.0" fitWidth="261.0" layoutX="23.0" layoutY="71.0"
                   pickOnBounds="true" preserveRatio="true">
            <Image url="@../../images/logo.png"/>
        </ImageView>
    </AnchorPane>
    <AnchorPane layoutX="292.0" prefHeight="606.0" prefWidth="309.0" style="-fx-background-color: #a9a9a9 #a9a9a9;">
        <Label layoutX="43.0" layoutY="50.0" text="New User">
            <font>
                <Font size="25.0"/>
            </font>
        </Label>
        <TextField fx:id="usernameTextField" layoutX="42.0" layoutY="103.0" prefHeight="35.0" prefWidth="186.0"
                   promptText="username">
            <font>
                <Font size="18.0"/>
            </font>
        </TextField>
        <TextField fx:id="passwordTextField" layoutX="42.0" layoutY="157.0" prefHeight="35.0" prefWidth="186.0"
                   promptText="password">
            <font>
                <Font size="18.0"/>
            </font>
        </TextField>
        <TextField fx:id="emailTextField" layoutX="42.0" layoutY="207.0" prefHeight="35.0" prefWidth="186.0"
                   promptText="e-mail">
            <font>
                <Font size="18.0"/>
            </font>
        </TextField>
        <Button fx:id="registerButton" layoutX="43.0" layoutY="265.0" mnemonicParsing="false"
                onAction="#registerNewUser" prefHeight="45.0" prefWidth="186.0"
                style="-fx-background-color: #3f8de7#3f8de7 #3f8de7#3f8de7 #3f8de7#3f8de7 #3f8de7#3f8de7;"
                text="Register" textFill="#0d0c0c">
            <font>
                <Font size="24.0"/>
            </font>
        </Button>
        <Button fx:id="cancelButton" layoutX="48.0" layoutY="510.0" mnemonicParsing="false" onAction="#cancelButton"
                prefHeight="20.0" prefWidth="176.0"
                style="-fx-background-color: #3f8de7#3f8de7 #3f8de7#3f8de7 #3f8de7#3f8de7 #3f8de7#3f8de7;"
                text="Back to start" textFill="#0d0c0c">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
        <Label fx:id="registerMessageLabel" layoutX="43.0" layoutY="408.0" prefHeight="82.0" prefWidth="207.0"/>
    </AnchorPane>
</AnchorPane>
